<h3><%= t('competition.title') %></h3>
<div class="text-right">
  <%= link_to t('prediction.new'), new_pred_prediction_path, class:"btn btn-primary btn-sm" %>
</div><br> 

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th class="text-center"><%= t('competition.name') %></th>
        <th class="text-center"><%= t('competition.kind') %></th>
        <th class="text-center" colspan="2"><%= t('layout.options') %></th>
      </tr>
    </thead>

    <tbody>
      <% @pred_predictions.includes(:competition).each do |pred_prediction| %>
        <tr>
          <td class="text-center"><%= pred_prediction.competition.name %></td>
          <td class="text-center">TIPO</td>
          <td class="text-center">
            <%= link_to t('prediction.view'), pred_prediction, class:"btn btn-primary btn-xs" %>
          </td>
          <td class="text-center">
            <%= link_to t('button.leave'), pred_prediction, method: :delete, data: { confirm: t('confirmation.sure') }, "data-confirm-fade" => true, "data-confirm-title" => "BBGame", "data-confirm-cancel" => t('button.cancel'), "data-confirm-proceed" => t('button.leave'), class:"btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
