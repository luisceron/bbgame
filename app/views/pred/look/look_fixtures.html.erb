<br>

<div class="col-md-8 text-center">
<div class="text-center">
  <%= link_to @pred_prediction.competition.name, pred_prediction_path(@pred_prediction), class: "h3" %>
</div><br> 
<div class="text-center">
  <h3>
    <span style="float:left"><%= link_to "<<", look_fixtures_pred_look_index_path(prediction_id: @pred_prediction.id, pred_round_id: @pred_round.id, d: 1), class:"btn btn-default btn-sm" %></span>
    <span><%= t('prediction.round') %><%= @pred_round.round.number_round %></span>
    <span style="float:right"><%= link_to ">>", look_fixtures_pred_look_index_path(prediction_id: @pred_prediction.id, pred_round_id: @pred_round.id, d: 2), class:"btn btn-default btn-sm" %></span>
  </h3>
</div>
<br>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <% @pred_fixtures.includes(:fixture).each do |pred_fixture| %>
      <tr class="text-center">
        <td colspan="2">
          <div class="vcenter" style="float:left">
            <%= display_flag_from_team(pred_fixture.fixture.team1_id, 25, 25, "img-responsive img-circle") %>
          </div>
          <div class="vcenter">
            <%= get_team_name(pred_fixture.fixture.team1_id) %>
          </div>
        </td>

        <% if pred_fixture.out_of_date_time %>
          <td>
            <%= pred_fixture.pred_result_team1 %>
          </td>
          <td class="text-center">
            <%= pred_fixture.pred_result_team2 %>
          </td> 
        <% end %>
        <td colspan="2">
          <div class="vcenter" style="float:left">
            <%= display_flag_from_team(pred_fixture.fixture.team1_id, 25, 25, "img-responsive img-circle") %>
          </div>
          <div class="vcenter">
            <%= get_team_name(pred_fixture.fixture.team2_id) %>
          </div>
        </td>
      </tr>

      <% if pred_fixture.fixture.done %>
        <tr class="text-center">
          <td colspan="3"><%= t('prediction.final_result')%>: 
            <%= get_team_name(pred_fixture.fixture.team1_id) %>
            <%= pred_fixture.fixture.result_team1 %> X
            <%= pred_fixture.fixture.result_team2 %>
            <%= get_team_name(pred_fixture.fixture.team2_id) %>
          </td>
          <td>
            <%= t('prediction.points')%>: <%= pred_fixture.points %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
</div>
