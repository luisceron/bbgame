<h3><%= t('team.title') %></h3>
<div class="text-right">
  <%= link_to t('team.new'), new_team_team_path, class:"btn btn-primary btn-sm" %>
</div><br>  

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th class="text-center"><%= t('team.name') %></th>
        <th class="text-center"><%= t('team.country') %></th>
        <th class="text-center" colspan="3"><%= t('layout.options') %></th>
      </tr>
    </thead>

    <tbody>
      <% @team_teams.order(name: :asc).each do |team_team| %>
        <tr>
          <td>
            <div class="vcenter" style="float:left">
              <%= display_flag(team_team, 18, 18, "img-responsive img-circle") %>
            </div>&nbsp;
            <div class="vcenter">
              <%= team_team.name %>(<%= team_team.short_name %>)
            </div>
          </td>
          <td class="text-center"><%= team_team.country %></td>
          <td class="text-center">
            <%= link_to t('button.show'), team_team, class:"btn btn-primary btn-xs" %>
          </td>
          <td class="text-center">
            <%= link_to t('button.edit'), edit_team_team_path(team_team), class:"btn btn-info btn-xs" %>
          </td>
          <td class="text-center">
            <%= link_to t('button.destroy'), team_team, class:"btn btn-danger btn-xs", method: :delete, data: { confirm: t('confirmation.sure') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
