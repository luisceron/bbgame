<div class="layout__form bigform">
<div class="row">
  <div class="col-lg-3">
    <div class="wrapper wrapper-content project-manager">
      <h4>
        <%=t 'competition.title' %>
      </h4><br><br>
      <div align="center">
        <%= image_tag("logo/ball_icon1.png", width: 50, height:50, class:"img-responsive")%>
      </div><br><br>
      <div class="text-center m-t-md">
        <div class="row">
          <%= link_to t('competition.select_teams'), comp_competition_add_teams_path(@comp_competition), class: "btn btn-default btn-sm btn-block" %>
        </div><br>
        <div class="row">
          <%= link_to t('competition.rounds'), comp_competition_rounds_path(@comp_competition), class: "btn btn-default btn-sm btn-block" %>
        </div><br>
        <div class="row">
          <%= link_to t('competition.ranking'), comp_competition_ranking_path(@comp_competition), class: "btn btn-default btn-sm btn-block" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-9">
    <div class="wrapper wrapper-content animated fadeInUp">
      <div class="ibox">
        <div class="ibox-content">

          <div class="row">
            <div class="col-lg-12">
              <div class="m-b-md">
                <div class="btn btn-white btn-xs pull-right">
                  <%= link_to(t('competition.edit'), edit_comp_competition_path(@comp_competition), class: 'btn btn-default btn-primary btn-xs')  %>
                </div>
                <div class="btn btn-white btn-xs pull-right">
                  <%= link_to t('competition.title'), comp_competitions_path, class: "btn btn-default btn-xs" %>
                </div>
                <h3><%=t 'competition.competition_name', name: @comp_competition.name %></h3>
              </div>
            </div>
          </div><br>

          <div class="row">
            <div class="col-lg-5">
              <dl class="dl-horizontal">
               <dt>Status:</dt>
               <dd><span class="label label-primary">Active</span></dd>
                <dt><%= t('competition.kind') %>:</dt>
                <dd><%= @comp_competition.kind %></dd>
                <dt><%= t('competition.place') %>:</dt>
                <dd><%= @comp_competition.place %></dd>
              </dl>
            </div>
            <div class="col-lg-7" id="cluster_info">
              <dl class="dl-horizontal">
                <dt><%= t('competition.created_at') %>:</dt>
                <dd><%= @comp_competition.created_at %></dd>
                <dt><%= t('competition.updated_at') %>:</dt>
                <dd><%= @comp_competition.updated_at %></dd>
                <dt><%= t('competition.number_teams') %>:</dt>
                <dd><%= @comp_competition.number_teams %></dd> 
                <dt><%= t('competition.number_rounds') %>:</dt>
                <dd><%= @comp_competition.number_rounds %></dd> 
              </dl>
            </div>
          </div>

          <div class="row m-t-sm">
            <div class="col-lg-12">
              <div class="panel blank-panel">
                <div class="panel-body">
                  <div class="tab-content">
                    <div class="table-responsive">
                      <table class="table table-striped table-hover table-bordered">
                        <thead>
                          <tr>
                            <th class="text-center"><%= t('team.name') %></th>
                            <th class="text-center"><%= t('team.country') %></th>
                          </tr>
                        </thead>

                        <tbody>
                          <% @comp_competition.teams.each do |team| %>
                          <tr>
                            <td class="text-center"><%= team.name %></td>
                            <td class="text-center"><%= team.country %></td>
                          </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

</div>
</div>
