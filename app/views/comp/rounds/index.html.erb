<h3><%= t('round.title') %></h3>
<div class="text-right">
  <%= link_to t('competition.back', name: @comp_competition.name), comp_competition_path(@comp_competition), class:"btn btn-default btn-sm" %>
  <%= link_to t('round.new'), new_comp_competition_round_path(@comp_competition), class:"btn btn-primary btn-sm" %>
</div><br> 

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th class="text-center"><%= t('round.done') %></th>
        <th class="text-center"><%= t('round.number') %></th>
        <th class="text-center" colspan="3"><%= t('layout.options') %></th>
      </tr>
    </thead>

    <tbody>
      <% @comp_rounds.order("number_round asc").each do |round| %>
        <tr>
          <td class="text-center">
            <% if round.done %>
              <span class="label label-success"><%= t('round.done') %></span>
            <% else %>
              <span class="label label-warning"><%= t('round.undone') %></span>
            <% end %>
          </td>
          <td class="text-center"><%= round.number_round %></td>
          <td class="text-center">
            <%= link_to t('button.show'), round, class:"btn btn-primary btn-xs" %>
          </td>

